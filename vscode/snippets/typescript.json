{
  "Reducer pattern with types": {
    "prefix": "rpt",
    "body": [
      "interface $1Action {",
      "type: $1Actions;",
      "payload: $1;",
      "};",
      "\n",
      "interface $1State {",
      "};",
      "\n",
      "const initialState: $1State = {",
      "};",
      "const $1Reducer = (state: $1State, action: $1Action) => {",
      "const { type, payload } = action;",
      "\n",
      "switch (type) {",
      "default:",
      "return { ...state };",
      "};",
      "}",
      "\n",
      "export { $1Reducer, initialState };",
      "export type { $1State, $1Action };"
    ]
  }
}
